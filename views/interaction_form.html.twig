{% extends 'layout.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
    <h2 class="text-center">{{ block('title') }}</h2>
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <div class="well">
        {{ form_start(interactionForm, { 'attr': {'class': 'form-horizontal'} }) }}


        <div class="form-group">
            {{ form_label(interactionForm.medicament2, null, { 'label_attr':  {
                'class': 'col-sm-4 control-label'
            }}) }}
            <div class="col-sm-4">
                {{ form_errors(interactionForm.medicament2) }}
                {{ form_widget(interactionForm.medicament2, { 'attr':  {
                    'class': 'form-control',
                }}) }}
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
                <button class="btn btn-primary"><span class="glyphicon glyphicon-floppy-save"></span> Enregistrer</button>
                <a href="{{ path('medicament' , { 'id': medicament.id }) }}">
                    <span class="btn btn-danger"><span class="glyphicon glyphicon-arrow-up"></span> Retour</span>
                </a>
            </div>
        </div>
        {{ form_end(interactionForm) }}

    </div>

{% endblock %}

